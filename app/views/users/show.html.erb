<div class="wrapper">
  <div class='form-wrap inner'>
    <div>
      <ul>
        <li class="notice"><%= notice %></li>
        <li class="alert"><%= alert %></li>
      </ul>
      <div class="tab-wrap">
        <input id="tab01" type="radio" name="tab" class="tab-switch" checked="checked"><label class="tab-label" for="tab01">アカウント</label>
        <div class="tab-content">
          <div class="panel"><%= render 'account' %></div>
        </div>
        <input id="tab02" type="radio" name="tab" class="tab-switch"><label class="tab-label" for="tab02">ご住所</label>
        <div class="tab-content">
          <div class="panel"><%= render 'addresses/form', address: @address %></div>
        </div>
        <input id="tab03" type="radio" name="tab" class="tab-switch"><label class="tab-label" for="tab03">クレジットカード</label>
        <div class="tab-content">
          <div id="address-data" class="panel"><%= render 'cards/card', card: @card %></div>
        </div>
        <input id="tab04" type="radio" name="tab" class="tab-switch"><label class="tab-label" for="tab04">購入履歴</label>
        <div class="tab-content">
          <div id="address-data" class="panel"><%= render 'reservation', card: @reservations %></div>
        </div>  
      </div>
      
    </div>
  </div>
</div>
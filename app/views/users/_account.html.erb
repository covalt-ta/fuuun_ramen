<div class="user-new-contents">
  <%= form_with model: current_user, url: user_path(current_user), class: 'registration-main', local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>
    <div class="user-new-form">

      <div class="user-form-group">
        <%= f.label :ニックネーム, class: 'lavel' %>
        <%= f.text_field :nickname, class:"user-input-default", placeholder:"例) ラーメン次郎", maxlength:"40", autofocus: true %>
      </div>

      <div class="user-form-group">
        <%= f.label :メールアドレス, class: 'lavel' %>
        <%= f.email_field :email, class:"user-input-default", placeholder:"PC・携帯どちらでも可" %>
      </div>

      <div class="user-form-group">
        <%= f.label :お名前（全角）, class: 'lavel' %>
        <div class='user-name-wrap'>
          <%= f.text_field :last_name, class:"user-input-name", placeholder:"例) 山田" %>
          <%= f.text_field :first_name, class:"user-input-name", placeholder:"例) 陸太郎" %>
        </div>
      </div>

      <div class="user-form-group">
        <%= f.label :お名前カナ（全角）, class: 'lavel' %>
        <div class='user-name-wrap'>
          <%= f.text_field :last_name_kana, class:"user-input-name", placeholder:"例) ヤマダ" %>
          <%= f.text_field :first_name_kana, class:"user-input-name", placeholder:"例) リクタロウ" %>
        </div>
      </div>

      <div class="user-form-group">
        <%= f.label :生年月日, class: 'lavel' %>
        <div class='user-birth-wrap'>
          <%= raw sprintf(
                      f.date_select(
                        :birthday,
                        class:'select-birth',
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 1930,
                        end_year: (Time.now.year - 5),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>
      </div>

      <div class='register-btn'>
        <%= f.submit "更新する" ,class:"register-green-btn" %>
      </div>
    </div>
  <% end %>
</div>

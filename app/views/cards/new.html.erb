<div class="wrapper">
  <%= form_with url: cards_path, id: 'charge-form', class: 'card-form', local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        クレジットカード情報入力
      </h1>
    </div>
    <%#= render 'shared/error_messages', model: f.object %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <%= f.label :number, "【カード番号】" %>
        <%= f.text_field :number, class: "number input-default", placeholder: "カード番号（半角数字）", maxlength: "16" %>
      </div>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <%= f.label :cvc, "【CVC】" %>
        <%= f.text_field :cvc, class: "cvc input-default", placeholder: "カード背面にある3桁or4桁の番号", maxlength: "4" %>
      </div>
    </div>

    <div class="form-group">
      <p>【有効期限】</p>
      <div class='input-piration-date-wrap'>
        <%= f.select :exp_month, 1..12, {include_blank: "---"}, class: "exp_month" %>
        <p>月</p>
        <%= f.select :exp_year, 20..30, {include_blank: "---"}, class: "exp_year" %>
        <p>年</p>
      </div>
    </div>
    <%= f.submit "登録する" ,class:"btn btn-outline-dark" %>
    <p class='register-info'>本人情報の登録について</p>
  </div>
  <% end %>
</div>
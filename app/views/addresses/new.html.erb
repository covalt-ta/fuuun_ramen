<% breadcrumb :user_new_address, current_user %>
<div class="inner">
  <div class="address-new-contents">
    <%= form_with model: @address, url: "/addresses", local: true do |f| %>
      <div class='address-new-form'>

        <div class="address-form-group">
          <%= f.label :郵便番号（必須）, class: 'lavel'%>
          <%= f.text_field :postal_code, class:"address-input-default", placeholder:"例）123-4567", maxlength:"8" %>
        </div>

        <div class="address-form-group">
          <%= f.label :都道府県（必須）, class: 'lavel'%>
          <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"address-input-default"}) %>
        </div>

        <div class="address-form-group">
          <%= f.label :市区町村（必須）, class: 'lavel'%>
          <%= f.text_field :city, class:"address-input-default", placeholder:"例）横浜市緑区"%>
        </div>

        <div class="address-form-group">
          <%= f.label :番地（必須）, class: 'lavel'%>
          <%= f.text_field :block, class:"address-input-default", placeholder:"例）青山1-1-1"%>
        </div>

        <div class="address-form-group">
          <%= f.label :建物名, class: 'lavel'%>
          <%= f.text_field :building, class:"address-input-default", placeholder:"例）柳ビル103"%>
        </div>

        <div class="address-form-group">
          <%= f.label :電話番号（必須）, class: 'lavel'%>
          <%= f.text_field :phone_number, class:"address-input-default", placeholder:"例）09012345678",maxlength:"11"%>
        </div>
        <div class='register-btn'>
          <%= f.submit "保存", class: "register-green-btn"%>
        </div>
      </div>
    <% end %>
  </div>
</div>

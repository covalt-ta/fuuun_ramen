<div class="wrapper">
  <div class='inner'>
    <div class="information-wrapper">
      <div class="info-index-contents">
        <% @products.each do |product| %>
          <div class="info-index-content">
            <div class="info-index-content-image">
              <%= image_tag product.image %>
            </div>
            <div class="info-index-content-data">
              <div class="info-index-content-head">
                <h4><%=product.name %></h4>
                <div class="display-check">
                  <% if product.display == false %>
                    <%= link_to "販売する", admins_product_path(product, product: { display: true }), method: :patch, class: "btn btn-outline-dark"%>
                  <% else %>
                    <%= link_to "販売停止する", admins_product_path(product, product: { display: false }), method: :patch, class: "btn btn-outline-dark"%>
                  <% end %>
                  <%= link_to "編集する", admins_product_path(product), class: "btn btn-outline-dark"%>
                  <%= link_to "削除する", admins_product_path(product), method: :delete, class: "btn btn-outline-dark"%>
                </div>
              </div>
              <div class="info-content-price">
                <p><%= product.display_price %></p>
                <p class="category-name"><%= product.category_name %>
              </div>
              <div class="info-content-text">
                <p><%= product.text %></p>
              </div>
              <span class="update-date"><%= "更新日時　#{product.updated_at.to_s(:datetime_jp)}" %><span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

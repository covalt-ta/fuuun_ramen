<div class="wrapper">
  <div class='inner'>
    <div class="information-wrapper">
      <h3>トピックス一覧</h3>
      <div class="info-index-contents">
        <% informations.each do |information| %>
          <div class="info-index-content">
            <div class="info-index-content-image">
              <% if information.image.attached? %>
                <%= image_tag information.image %>
              <% else %>
                <%= image_tag "sample-logo.png" %>
              <% end %>
            </div>
            <div class="info-index-content-data">
              <div class="info-index-content-head">
                <h4><%=link_to information.title, edit_admins_information_path(information)%></h4>
                <%= link_to "削除する", admins_information_path(information), method: :delete, class: "btn btn-outline-dark"%>
              </div>
              <p><%= information.text %></p>
              <span class="update-date"><%= information.updated_at %><span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
